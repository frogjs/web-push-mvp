{
  "name": "web-push-mvp",
  "version": "0.1.0",
  "private": true,
  "description": "Web Push MVP with NestJS, MongoDB, BullMQ, and Redis",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "lint": "eslint \"{src,public,scripts}/**/*.ts\" \"public/**/*.js\"",
    "format": "prettier --write \"{src,public,scripts}/**/*.{ts,js,json,md,html}\"",
    "prepare": "husky install",
    "generate:vapid": "ts-node scripts/generate-vapid.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/mongoose": "^10.0.1",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^7.3.0",
    "bullmq": "^4.15.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "mongoose": "^8.3.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "@types/web-push": "^3.6.4",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.{ts,js,html,md,json}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
